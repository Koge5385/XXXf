{% extends '_modules/_base.njk' %}
{%- set fileName = 'password_reminder' -%}
{%- set pageName = 'password_reminder' -%}
{%- set pageLevel = '2' -%}
{%- set pageTitle = 'パスワードを<br class="sp-view">忘れた方へ' -%}
{%- set en_pageTitle = 'PASSWORD REMINDER' -%}
{%- set pageDescription = 'パスワードを忘れた方へディスクリプション' -%}
{%- set breadcrumbs = [{item: 'パスワードを忘れた方へ'}]-%}

{% block content %}

<div class="container">

  <section class="passwordReminder">
    <form method="post" class="js-async-reminderForm-target">
      <p class="passwordReminder__text">登録済みのメールアドレスを入力してパスワード変更メールの送信リクエストをしてください。<br>メールに記載されたURLから変更手続きを行ってください。</p>
      <div class="inputBlock">
        <h2 class="inputBlock__heading">メールアドレス</h2>

        <input type="text" name="email" class="m-inputText js-mailValidation-target" placeholder="example@example.co.jp" value="" maxlength="250">
        <p class="m-inputErrorText">メールアドレスを正しく入力してください。</p>
        <p class="inputBlock__note">※半角英数字</p>

        <p class="inputBlock__confirmText">メールアドレス（確認）</p>

        <input type="text" class="m-inputText js-mailValidation-target" placeholder="example@example.co.jp" value="" maxlength="250">
        <p class="m-inputErrorText">メールアドレスを正しく入力してください。</p>
        <p class="inputBlock__note">※半角英数字</p>
      </div>

      <p class="inputBlock__rejectText js-async-passwordReminderReject-target">送信出来ませんでした。</p>
      <button type="button" class="inputBlock__submit js-activate-target js-async-reminderSubmit-target" disabled>送信する</button>
    </form>
  </section>

</div>

{% endblock %}
