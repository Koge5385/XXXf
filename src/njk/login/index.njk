{% extends '_modules/_base.njk' %}
{%- set fileName = 'index' -%}
{%- set pageName = 'login' -%}
{%- set pageLevel = '2' -%}
{%- set pageTitle = 'ログイン' -%}
{%- set en_pageTitle = 'LOGIN' -%}
{%- set pageDescription = 'エムステージ病院事務職求職支援のログインページ。エムステージ病院事務職求職支援は、病院事務職、医療事務職に特化した転職・求人情報サイトです。医療経営に精通したコンサルタントが、あなたの転職活動をフルサポートします。' -%}
{%- set breadcrumbs = [{item: 'ログイン'}]-%}

{% block content %}

  <div class="container">

    <section class="login">
      <form method="post" class="js-async-loginForm-target">
        <div class="inputBlock">
          <h2 class="inputBlock__heading">メールアドレス</h2>
          <input type="text" name="email" class="m-inputText js-async-loginEmail-target js-mailValidation-target" placeholder="example@example.co.jp" value="" maxlength="250">
          <p class="m-inputErrorText">メールアドレスが正しくありません。</p>
        </div>
        <div class="inputBlock">
          <h2 class="inputBlock__heading">パスワード</h2>
          <input type="password" name="password" class="m-inputText js-async-loginPassword-target js-passwordValidation-target" value="" maxlength="250">
          <p class="m-inputErrorText">パスワードが正しくありません。</p>
        </div>
        <p class="m-note">※パスワードを忘れた方は<a href="{{ basePath }}login/password_reminder.html" class="login__textLink">こちら</a>
        </p>
        <p class="m-note m-noteBoldText">※会員登録がまだお済みでない場合は、まず<a href="{{ basePath }}signup/create_account.html" class="login__textLink">会員登録</a>を行ってください</p>

        <p class="inputBlock__rejectText js-async-loginReject-target">メールアドレスまたはパスワードが違います</p>
        <button type="button" class="inputBlock__submit js-async-loginSubmit-target js-activate-target" disabled>ログイン</button>
      </form>
    </section>

  </div>

{% endblock %}
