{% extends '_modules/_base.njk' %}
{%- set fileName = 'detail' -%}
{%- set pageName = 'job_detail' -%}
{%- set pageLevel = '2' -%}
{%- set pageTitle = '求人詳細' -%}
{%- set en_pageTitle = 'JOB DETAIL' -%}
{%- set pageDescription = '求人詳細ディスクリプション' -%}
{%- set breadcrumbs = [{item: '求人一覧', href: 'job/'}, {item: ''}]-%}

{% block content %}

<div class="container js-success-target">
  <section class="jobDetailWrap">
    <div class="jobDetailBox">
      <div class="jobDetailHeader">
        <div class="jobDetailHeaderCategory">
          <span class="jobDetailHeaderCategory__icon">{{ macro.svg_code_hospital() }}</span>
          <p class="jobDetailHeaderCategory__name js-async-jobDetailCategory-target"></p>
        </div>
        <div class="jobDetailHeaderStatus">
          <span class="jobDetailHeaderStatus__new m-fontFamilyMontserrat">NEW</span>
          <p class="jobDetailHeaderStatus__date"><span class="js-async-jobDetailDate-target"></span> 公開</p>
        </div>
      </div>
      <div class="jobDetailContent">
        <h1 class="jobDetailContent__title js-async-jobDetailTitle-target"></h1>
        <p class="jobDetailContent__buildingName">施設名：<span class="js-async-jobDetailBuildingName-target"></span></p>
        <div class="jobDetailContentPickup">
          <ul class="jobDetailContentPickup__list">
            <li class="jobDetailContentPickup__item">
              <div class="jobDetailContentPickup__itemLabel">
                <span class="jobDetailContentPickup__itemLabelIcon">{{ macro.svg_code_bag() }}</span>職　種
              </div>
              <p class="jobDetailContentPickup__itemContent js-async-jobDetailOccupation-target"></p>
            </li>
            <li class="jobDetailContentPickup__item">
              <div class="jobDetailContentPickup__itemLabel">
                <span class="jobDetailContentPickup__itemLabelIcon jobDetailContentPickup__itemLabelIcon--place">{{ macro.svg_code_place() }}</span>勤務地
              </div>
              <p class="jobDetailContentPickup__itemContent js-async-jobDetailPlace-target"></p>
            </li>
            <li class="jobDetailContentPickup__item">
              <div class="jobDetailContentPickup__itemLabel">
                <span class="jobDetailContentPickup__itemLabelIcon">{{ macro.svg_code_money() }}</span>年　収
              </div>
              <p class="jobDetailContentPickup__itemContent jobDetailContentPickup__itemContent--salary"><span><span class="js-async-jobDetailMinSalary-target"></span>～<span class="js-async-jobDetailMaxSalary-target"></span></span>万円</p>
            </li>
          </ul>
        </div>

        <table class="flexTable jobDetailContentTable">
          <tbody>
            <tr>
              <th class="jobDetailContentTable__heading">仕事内容</th>
              <td class="js-async-jobDetailSumally-target"></td>
            </tr>

            <tr>
              <th class="jobDetailContentTable__heading">雇用形態</th>
              <td class="js-async-jobDetailPosition-target"></td>
            </tr>

            <tr>
              <th class="jobDetailContentTable__heading">勤務時間</th>
              <td class="js-async-jobDetailWorkTime-target"></td>
            </tr>

            <tr>
              <th class="jobDetailContentTable__heading">休日</th>
              <td class="js-async-jobDetailHoliday-target"></td>
            </tr>

            <tr>
              <th class="jobDetailContentTable__heading">休暇</th>
              <td class="js-async-jobDetailDayOff-target"></td>
            </tr>

            <tr>
              <th class="jobDetailContentTable__heading">固定残業</th>
              <td class="js-async-jobDetailOvertime-target"></td>
            </tr>

            <tr>
              <th class="jobDetailContentTable__heading">試用期間</th>
              <td class="js-async-jobDetailTrial-target"></td>
            </tr>

            <tr>
              <th class="jobDetailContentTable__heading">福利厚生</th>
              <td class="js-async-jobDetailBenefit-target"></td>
            </tr>

            <tr>
              <th class="jobDetailContentTable__heading">その他備考</th>
              <td class="js-async-jobDetailOther-target"></td>
            </tr>
          </tbody>
        </table>

        <div class="jobDetailContentButtonWrap">
          <a href="#" class="m-button m-button--blue jobDetailContent__actionButton"><span>この求人に</span><br class="sp-view">問い合わせる</a>
          <a href="#" class="m-button m-button--orange jobDetailContent__actionButton"><span>この求人に</span><br class="sp-view">応募する</a>
        </div>
      </div>
    </div>
  </section>
  <div class="jobDetailBackLink">
    <a href="#" class="m-backLink m-button m-button--white jobDetailBackLink__item">求人一覧に戻る</a>
  </div>
</div>

<div class="jobDetailError js-error-target">
  <p class="jobDetailError__text">エラー：再度検索してください。</p>
</div>

<div class="jobDetailDialogWrap">
  <div class="jobDetailDialog">
    <div class="jobDetailDialogInner">
      <div class="jobDetailDialog__close"></div>
      <div class="jobDetailDialogContent">
        <p class="jobDetailDialog__text">この求人に応募します。よろしいですか？</p>
        <div class="jobDetailDialogConfirm">
          <button type="button" class="jobDetailDialog__button jobDetailDialog__button--cancel">キャンセル</button>
          <button type="button" class="jobDetailDialog__button jobDetailDialog__button--submit">応募する</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="jobDetailDialogDone">
  <div class="jobDetailDialogDone__close"></div>
  <p class="jobDetailDialogDone__text">応募が完了しました。</p>
</div>

{% include '_modules/_searchButtonBlock.njk' %}

{% endblock %}
