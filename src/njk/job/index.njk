    <label for="jobList_search" class="mobileSearch__closeLabel">検索を閉じる</label>
    <div class="mobileSearchBoxWrap">
      <label for="jobList_search" class="mobileSearch__closeBackground"></label>
      <div class="mobileSearchBox">
        <div class="mobileSearchBoxInner">
          <ul class="mobileSearchList">
