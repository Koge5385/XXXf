                {%- for item in selectPlace %}
                <option value="{{ loop.index }}">{{ item.place }}</option>
                {%- endfor %}
              </select>
            </li>
            <li class="mobileSearchList__item mobileSearchList__item--salary">
              <select name="jobList_selectSalary" class="m-inputSelect mobileSearchList__input">
                <option value="">年収から探す</option>
                {%- set selectSalary = [
                  {salary: '300万〜'},
                  {salary: '400万〜'},
                  {salary: '500万〜'},
                  {salary: '600万〜'},
                  {salary: '700万〜'},
                  {salary: '800万〜'}
                ] -%}
                {%- for item in selectSalary %}
                <option value="{{ loop.index }}">{{ item.salary }}</option>
                {%- endfor %}
              </select>
            </li>
            <li class="mobileSearchList__item mobileSearchList__item--freeWord">
              <input name="jobList_freeWord" type="text" class="m-inputText mobileSearchList__input mobileSearchList__input--freeWord" placeholder="キーワードで探す">
            </li>
          </ul>
          <a href="#" class="m-button m-button--blue mobileSearch__submit">この条件で再検索</a>
        </div>
      </div>
    </div>
  </div>
</div>

