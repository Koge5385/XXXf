{% extends '_modules/_base.njk' %}
{%- set fileName = 'create_account' -%}
{%- set pageName = 'create_account' -%}
{%- set pageLevel = '2' -%}
{%- set pageTitle = 'メールアドレス登録' -%}
{%- set en_pageTitle = 'SIGN UP' -%}
{%- set pageDescription = 'メールアドレス登録ディスクリプション' -%}
{%- set breadcrumbs = [{item: 'メールアドレス登録'}]-%}

{% block content %}

<div class="container">

  {%- set registSteps = [
    {number: '1', text: 'メールアドレス登録', class: ' is-active'},
    {number: '2', text: 'メール認証', class: ''},
    {number: '3', text: 'プロフィール登録', class: ''},
    {number: '4', text: 'レジュメ登録', class: ''},
    {number: '5', text: '完了', class: ''}
  ] -%}
  {% include '_modules/_registStep.njk' %}

  <section class="registMail">
    <form method="post" class="js-async-entryForm-target">
      <div class="inputBlock">
        <h2 class="inputBlock__heading">メールアドレスを登録してください。</h2>

        <input type="text" name="mail" class="m-inputText js-mailValidation-target js-async-sendMailData-target" placeholder="example@example.co.jp" value="">
        <p class="m-inputErrorText">メールアドレスを正しく入力してください。</p>
        <p class="inputBlock__note">※半角英数字</p>

        <p class="inputBlock__confirmText">確認のためもう一度メールアドレスを入力してください</p>

        <input type="text" class="m-inputText js-mailValidation-target" placeholder="example@example.co.jp" value="">
        <p class="m-inputErrorText">メールアドレスを正しく入力してください。</p>
        <p class="inputBlock__note">※半角英数字</p>
      </div>

      <ul class="registMailCaution">
        <li class="registMailCaution__item">※ご登録前には、<a href="{{ basePath }}membership_rule/">会員規約</a>をご確認ください。</li>
        <li class="registMailCaution__item">※ご登録いただいた個人情報については、エムステージの個人情報保護方針に則り、厳重に管理させていただきます。</li>
        <li class="registMailCaution__item">※会員登録済みの方は、ログインを行ってください。</li>
      </ul>

      <div class="inputBlock inputBlock--center">
        <input type="checkbox" id="agree" class="m-inputCheck js-hasChecked-target">
        <label for="agree" class="m-inputCheckLabel"><a href="{{ basePath }}membership_rule/">会員規約</a>および<a href="{{ basePath }}privacy_policy/">個人情報保護方針</a>に同意する</label>
        <p class="m-inputErrorText"></p>
      </div>

      <button type="button" class="inputBlock__submit js-formSubmit-target js-async-entrySubmit-target" disabled>登録する</button>
    </form>
  </section>

</div>

{% endblock %}
