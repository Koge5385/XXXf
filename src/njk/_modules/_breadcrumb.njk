<div class="breadcrumb">
  <div class="breadcrumbInner">
    <ul class="breadcrumbList js-breadcrumb-target" itemscope itemtype="http://schema.org/BreadcrumbList">
      <li class="breadcrumbList__item" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
        <a href="{{ basePath }}" itemprop="item">
          <span itemprop="name">HOME</span>
        </a>
        <meta itemprop="position" content="1" />
      </li>
      {%- if pageName === 'job_contact' -%}
      <li class="breadcrumbList__item" itemprop="itemListElement" itemscope="" itemtype="http://schema.org/ListItem">
        <a href="/job/" itemprop="item">
          <span itemprop="name">求人一覧</span>
        </a>
        <meta itemprop="position" content="2">
      </li>
      <li class="breadcrumbList__item" itemprop="itemListElement" itemscope="" itemtype="http://schema.org/ListItem">
        <a href="/job/detail.html" class="js-async-jobContactHref-target" itemprop="item">
          <span itemprop="name">求人詳細</span>
        </a>
        <meta itemprop="position" content="3">
      </li>
      <li class="breadcrumbList__item" itemprop="itemListElement" itemscope="" itemtype="http://schema.org/ListItem">
        <span itemprop="name">求人問い合わせ</span><meta itemprop="position" content="4">
      </li>
      {%- else -%}
      {%- for breadcrumb in breadcrumbs %}
      <li class="breadcrumbList__item" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
        {%- if loop.last -%}
        {%- if pageName === 'job_detail' -%}
        <span itemprop="name" class="js-async-breadcrumbText-target"></span>
        {%- else -%}
        <span itemprop="name">{{ breadcrumb.item }}</span>
        {%- endif -%}
        <meta itemprop="position" content="{{ loop.index + 1 }}" />
        {%- else -%}
        <a href="{{ basePath }}{{ breadcrumb.href }}" itemprop="item">
          <span itemprop="name">{{ breadcrumb.item }}</span>
        </a>
        <meta itemprop="position" content="{{ loop.index + 1 }}" />
        {%- endif -%}
      </li>
      {%- endfor -%}
      {%- endif -%}
    </ul>
  </div>
</div>
