<section class="searchButtonBlock">
  {%- if pageName !== 'forbeginner' and pageName !== 'job_list' and pageName !== 'job_detail' -%}
  <div class="sectionHeading">
    <h1 class="sectionHeading__title">求人を探す</h1>
    <small class="sectionHeading__enTitle">SEARCH</small>
  </div>
  {%- endif -%}
  {%- if pageName === 'forbeginner' -%}
  <h2 class="searchButtonBlock__heading">希望条件から<br class="sp-view">求人を探す</h2>
  {%- endif -%}
  <div class="searchButtonBlockInner">
    <div class="searchButtonBlockContent">
      <h3 class="m-heading m-heading--lv3 searchButtonBlockContent__title"><span class="searchButtonBlockContent__icon">{{ macro.svg_code_bag() }}</span>職種から探す</h3>
      <ul class="searchButtonBlockJobList">
        {%- set searchButtonJob = [
          {job: '事務長', value: 'option_u_jimutyou'},
          {job: '事務長候補', value: 'option_u_jimutyoukouho'},
          {job: '経営企画', value: 'option_u_keieikikaku'},
          {job: '医事課長<span>（候補含む）</span>', value: 'option_u_ijikatyoukouhohukumu'},
          {job: '医事課員', value: 'option_u_ijikain'},
          {job: '総務課長<span>（候補含む）</span>', value: 'option_u_soumukatyoukouhohukumu'},
          {job: '総務課員', value: 'option_u_soumukain'},
          {job: '人事課長<span>（候補含む）</span>', value: 'option_u_jinjikatyoukouhohukumu'},
          {job: '人事課員', value: 'option_u_jinjikain'},
          {job: '財務・経理', value: 'option_u_zaimukeiri2'},
          {job: '地域連携室・渉外', value: 'option_u_tiikirenkeishitsushitsugai'},
          {job: '広報', value: 'option_u_kouhou'},
          {job: '情報管理室', value: 'option_u_jouhoukanrishitsu'},
          {job: '事務総合職', value: 'option_u_jimusougoushoku'},
          {job: '健診総合職', value: 'option_u_kenshinsougoushoku'},
          {job: '診療情報管理士', value: 'option_u_shinryoujouhoukanrishi'},
          {job: '社会福祉士', value: 'option_u_syakaihukushishi'},
          {job: 'その他', value: 'option_u_sonohoka'}
        ] -%}
        {%- for item in searchButtonJob %}
        <li class="searchButtonBlockJobList__item"><a href="{{ basePath }}job/?job_p_job_category={{ item.value }}" class="searchButtonBlockJobList__link">{{ item.job | safe }}</a></li>
        {%- endfor %}
      </ul>
    </div>
    <div class="searchButtonBlockContent">
      <h3 class="m-heading m-heading--lv3 searchButtonBlockContent__title"><span class="searchButtonBlockContent__icon">{{ macro.svg_code_place() }}</span>勤務地から探す</h3>
      <div class="searchButtonBlockArea">
        <input type="checkbox" id="sp_areaList_kanto" class="searchButtonBlockArea__toggleTrigger">
        <label for="sp_areaList_kanto" class="searchButtonBlockArea__heading">関東</label>
        <ul class="searchButtonBlockAreaList">
          {%- set searchButtonKanto = [
            {area: '東京都', value: 'option_p_tokyo'},
            {area: '神奈川県', value: 'option_p_kanagawa'},
            {area: '埼玉県', value: 'option_p_saitama'},
            {area: '千葉県', value: 'option_p_chiba'},
            {area: '茨城県', value: 'option_p_ibaraki'},
            {area: '栃木県', value: 'option_p_tochigi'},
            {area: '群馬県', value: 'option_p_gunma'}
          ] -%}
          {%- for item in searchButtonKanto %}
          <li class="searchButtonBlockAreaList__item"><a href="{{ basePath }}job/?job_u_kinmutitodoufuken={{ item.value | urlencode }}" class="searchButtonBlockAreaList__link">{{ item.area }}</a></li>
          {%- endfor %}
        </ul>
      </div>
      <div class="searchButtonBlockArea">
        <input type="checkbox" id="sp_areaList_kansai" class="searchButtonBlockArea__toggleTrigger">
        <label for="sp_areaList_kansai" class="searchButtonBlockArea__heading">関西</label>
        <ul class="searchButtonBlockAreaList">
          {%- set searchButtonKanto = [
            {area: '大阪府', value: 'option_p_osaka', disabled: false},
            {area: '兵庫県', value: 'option_p_hyogo', disabled: false},
            {area: '京都府', value: 'option_p_kyoto', disabled: false},
            {area: '三重県', value: 'option_p_mie', disabled: false },
            {area: '奈良県', value: 'option_p_nara', disabled: false},
            {area: '滋賀県', value: 'option_p_shiga', disabled: false},
            {area: '和歌山県', value: 'option_p_wakayama', disabled: false}
          ] -%}
          {%- for item in searchButtonKanto %}
          {%- if item.disabled -%}
            <li class="searchButtonBlockAreaList__item searchButtonBlockAreaList__item--disable"><span>{{ item.area }}</span></li>
          {%- else -%}
            <li class="searchButtonBlockAreaList__item"><a href="{{ basePath }}job/?job_u_kinmutitodoufuken={{ item.value | urlencode }}" class="searchButtonBlockAreaList__link">{{ item.area }}</a></li>
          {%- endif -%}
          {%- endfor %}
        </ul>
      </div>
      <div class="searchButtonBlockArea">
        <input type="checkbox" id="sp_areaList_chubu" class="searchButtonBlockArea__toggleTrigger">
        <label for="sp_areaList_chubu" class="searchButtonBlockArea__heading">中部</label>
        <ul class="searchButtonBlockAreaList">
          {%- set searchButtonChubu = [
            {area: '愛知県', value: 'option_p_aichi'},
            {area: '静岡県', value: 'option_p_shizuoka'},
            {area: '岐阜県', value: 'option_p_gifu'}
          ] -%}
          {%- for item in searchButtonChubu %}
          <li class="searchButtonBlockAreaList__item"><a href="{{ basePath }}job/?job_u_kinmutitodoufuken={{ item.value | urlencode }}" class="searchButtonBlockAreaList__link">{{ item.area }}</a></li>
          {%- endfor %}
        </ul>
      </div>
      <div class="searchButtonBlockArea">
        <input type="checkbox" id="sp_areaList_kyushu" class="searchButtonBlockArea__toggleTrigger">
        <label for="sp_areaList_kyushu" class="searchButtonBlockArea__heading">九州</label>
        <ul class="searchButtonBlockAreaList">
          {%- set searchButtonKyushu = [
            {area: '福岡県', value: 'option_p_fukuoka'},
            {area: '熊本県', value: 'option_p_kumamoto'},
            {area: '', value: '', style: 'visibility:hidden;'}
          ] -%}
          {%- for item in searchButtonKyushu %}
          <li class="searchButtonBlockAreaList__item" style="{{item.style}}"><a href="{{ basePath }}job/?job_u_kinmutitodoufuken={{ item.value | urlencode }}" class="searchButtonBlockAreaList__link">{{ item.area }}</a></li>
          {%- endfor %}
        </ul>
      </div>
    </div>
  </div>
  {%- if pageName === 'forbeginner' -%}
  <div class="searchButtonBlockRegist">
    <p class="searchButtonBlockRegist__text">会員登録が<br class="sp-view">お済みでない方はこちら</p>
    <a href="{{ basePath }}signup/create_account.html" class="searchButtonBlockRegist__button" onclick="gtag('event', 'click', {'event_category': '{{ pageName }}_searchBlock_regist','event_label': 'searchBlock_regist'});">無料会員登録</a>
  </div>
  {%- endif -%}
</section>
