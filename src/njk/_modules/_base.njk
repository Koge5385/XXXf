{%- import '_modules/_macro.njk' as macro -%}
{%- set basePath = '/' -%}

<!DOCTYPE html>
{% if pageName === 'pagelist' %}
<!-- htmllint tag-bans="false" -->
{% endif %}
<html lang="ja">
  <head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# website: http://ogp.me/ns/website#">
    {% include '_modules/_meta.njk' %}

    <link rel="stylesheet" type="text/css" href="{{ basePath }}css/pages/{{ pageName }}.css">

    {# {% include '_modules/_ga.njk' %} #}
  </head>
  <body>
  {% include '_modules/_gtm2.njk' %}
    <div class="contentsWrap">
      {% include '_modules/_header.njk' %}

      {%- if pageName !== 'job_detail' and pageName !== '404' %}
      {% include '_modules/_keyVisual.njk' %}
      {% endif -%}

      {% block content %}{% endblock %}

      {% include '_modules/_breadcrumb.njk' %}

      {% include '_modules/_footer.njk' %}
    </div>

    {%- if pageName !== 'create_account' and pageName !== 'confirm_email' and pageName !== 'regist_profile' and pageName !== 'regist_resume' and pageName !== 'regist_complete' %}
    <script src="{{ basePath }}js/common.js"></script>
    {% endif -%}
    {%- if pageName !== 'pagelist' and pageName !== 'forbeginner' and pageName !== 'company' and pageName !== 'membership_rule' and pageName !== 'privacy_policy' and pageName !== 'contact_complete' and pageName !== 'forrecruiter_complete' and pageName !== 'cancel_membership_complete' and pageName !== 'password_reminder_complete' and pageName !== '404' %}
    <script src="{{ basePath }}js/pages/{{ pageName }}.js"></script>
    {% endif -%}
    {%- if pageName === 'regist_profile' or pageName === 'profile_edit' %}
    <script src="{{ basePath }}js/lib/vendor/yubinbango/yubinbango.js"></script>
    {% endif -%}
  </body>
</html>
