{% extends '_modules/_base.njk' %}
{%- set fileName = 'password_change' -%}
{%- set pageName = 'password_change' -%}
{%- set pageLevel = '2' -%}
{%- set pageTitle = 'パスワード変更' -%}
{%- set en_pageTitle = 'PASSWORD CHANGE' -%}
{%- set pageDescription = 'パスワード変更ディスクリプション' -%}
{%- set breadcrumbs = [{item: 'マイページ', href: 'mypage/'}, {item: 'パスワード変更'}]-%}

{% block content %}

<div class="container">
  <section class="passwordChange">
    <div class="inputBlock">
      <p class="inputBlock__guideText">現在のパスワード</p>

      <input type="password" name="current_password" class="m-inputText js-async-currentPassword-target" placeholder="" value="">
      <p class="m-inputErrorText"></p>
      <p class="inputBlock__note">※半角英数字</p>

      <p class="inputBlock__confirmText">新しいパスワード</p>

      <input type="password" name="new_password" class="m-inputText js-async-newPassword-target" placeholder="" value="">
      <p class="m-inputErrorText"></p>
      <p class="inputBlock__note">※半角英数字</p>

      <p class="inputBlock__confirmText">新しいパスワード（確認）</p>

      <input type="password" name="new_password" class="m-inputText" placeholder="" value="">
      <p class="m-inputErrorText"></p>
    </div>
    <div class="passwordChangeSubmit"><button type="button" class="passwordChangeSubmit__button js-async-passwordChangeSubmit-target">パスワード変更</button></div>
  </section>
</div>

{% endblock %}
