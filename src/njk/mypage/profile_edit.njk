{% extends '_modules/_base.njk' %}
{%- set fileName = 'profile_edit' -%}
{%- set pageName = 'profile_edit' -%}
{%- set pageLevel = '2' -%}
{%- set pageTitle = 'プロフィール編集' -%}
{%- set en_pageTitle = 'EDIT PROFILE' -%}
{%- set pageDescription = 'プロフィール編集ディスクリプション' -%}
{%- set breadcrumbs = [{item: 'プロフィール編集'}]-%}

{% block content %}

<div class="container">

  <section class="editProfile">
    <form method="post" action="">
      <div class="inputBlock">
        <p class="inputBlock__heading">個人氏名{{ macro.inputMust() }}</p>
        <div class="inputBlockFlex">
          <div class="inputBlockFlex__item">
            <input type="text" name="lastName" class="m-inputText" placeholder="性" value="">
            <p class="m-inputErrorText"></p>
          </div>
          <div class="inputBlockFlex__item">
            <input type="text" name="firstName" class="m-inputText" placeholder="名" value="">
            <p class="m-inputErrorText"></p>
          </div>
        </div>
      </div>
      <div class="inputBlock">
        <p class="inputBlock__heading">フリガナ{{ macro.inputMust() }}</p>
        <div class="inputBlockFlex">
          <div class="inputBlockFlex__item">
            <input type="text" name="lastName_kana" class="m-inputText" placeholder="セイ" value="">
            <p class="m-inputErrorText"></p>
          </div>
          <div class="inputBlockFlex__item">
            <input type="text" name="firstName_kana" class="m-inputText" placeholder="メイ" value="">
            <p class="m-inputErrorText"></p>
          </div>
        </div>
      </div>
      <div class="inputBlock">
        <p class="inputBlock__heading">生年月日{{ macro.inputMust() }}</p>
        <div class="inputBlockFlex inputBlockFlex--always">
          <select name="birthYear" class="m-inputSelect inputBlock__inputSmall">
            {{ macro.optionYear() }}
          </select>
          <select name="birthMonth" class="m-inputSelect inputBlock__inputSmall">
            {{ macro.optionMonth() }}
          </select>
          <select name="birthDay" class="m-inputSelect inputBlock__inputSmall">
            {{ macro.optionDay() }}
          </select>
        </div>
        <p class="m-inputErrorText"></p>
      </div>
      <div class="inputBlock">
        <p class="inputBlock__heading">性別{{ macro.inputMust() }}</p>
        <div class="inputBlockFlex">
          <div class="inputBlockFlex__item">
            <input type="radio" id="sex_man" name="sex" class="m-inputRadio" value="man">
            <label for="sex_man" class="m-inputRadioLabel">男性</label>
          </div>
          <div class="inputBlockFlex__item">
            <input type="radio" id="sex_woman" name="sex" class="m-inputRadio" value="woman">
            <label for="sex_woman" class="m-inputRadioLabel">女性</label>
          </div>
        </div>
        <p class="m-inputErrorText"></p>
      </div>
      <div class="inputBlock">
        <p class="inputBlock__heading">住所(都道府県){{ macro.inputMust() }}</p>
        <select name="place" class="m-inputSelect inputBlock__inputHalf">
          {{ macro.optionPlace() }}
        </select>
        <p class="m-inputErrorText"></p>
      </div>
      <div class="inputBlock">
        <p class="inputBlock__heading">電話番号{{ macro.inputMust() }}</p>
        <input type="text" name="tel" class="m-inputText inputBlock__inputHalf" placeholder="03-5437-2950" value="">
        <p class="m-inputErrorText"></p>
      </div>
      <div class="inputBlock">
        <p class="inputBlock__heading">メールアドレス{{ macro.inputMust() }}</p>
        <input type="text" name="mail" class="m-inputText" placeholder="example@example.co.jp" value="">
        <p class="m-inputErrorText"></p>
        <p class="inputBlock__note">※半角英数字</p>
        <p class="inputBlock__confirmText">確認のためもう一度メールアドレスを入力してください</p>
        <input type="text" name="mail_confirm" class="m-inputText" placeholder="example@example.co.jp" value="">
        <p class="m-inputErrorText"></p>
        <p class="inputBlock__note">※半角英数字</p>
      </div>
      <div class="inputBlock">
        <p class="inputBlock__heading">パスワード{{ macro.inputMust() }}</p>
        <input type="password" name="mobileMail" class="m-inputText" value="">
        <p class="m-inputErrorText"></p>
        <p class="inputBlock__note">※半角英数●文字以上を使用してください</p>
        <p class="inputBlock__confirmText">確認のためもう一度パスワードを入力してください</p>
        <input type="password" name="mobileMail_confirm" class="m-inputText" value="">
        <p class="m-inputErrorText"></p>
        <p class="inputBlock__note">※半角英数●文字以上を使用してください</p>
      </div>

      <div class="inputBlock">
        <p class="inputBlock__guideText">※確認メールに記載されたURLをクリックするまで、メールアドレスは変更されていません。</p>
      </div>

      <div class="inputBlock">
        <div class="inputBlockNotice">
          <p class="inputBlockNotice__heading">確認メールが届かない場合</p>
          <p class="inputBlockNotice__text">メール到着までに時間がかかる場合があります。数分後に再度受信してみてください。<br>メーラーによっては迷惑メールとして処理されている可能性もありますので、ご注意ください。</p>
        </div>
      </div>

      <button type="button" class="inputBlock__submit" disabled>確認画面へ</button>
    </form>
  </section>

</div>

{% endblock %}
