{% extends '_modules/_base.njk' %}
{%- set fileName = 'profile_edit' -%}
{%- set pageName = 'profile_edit' -%}
{%- set pageLevel = '2' -%}
{%- set pageTitle = 'プロフィール編集' -%}
{%- set en_pageTitle = 'EDIT PROFILE' -%}
{%- set pageDescription = 'MSTAGE病院事務職求職支援のプロフィール編集ページ。MSTAGE病院事務職求職支援は、病院事務職、医療事務職に特化した転職・求人情報サイトです。医療経営に精通したコンサルタントが、あなたの転職活動をフルサポートします。' -%}
{%- set breadcrumbs = [{item: 'マイページ', href: 'mypage/'}, {item: 'プロフィール編集'}]-%}

{% block content %}

<div class="container">

  <section class="editProfile">
    <form method="post" class="js-async-editProfileForm-target h-adr">
      <div class="inputBlock">
        <h2 class="inputBlock__heading">個人氏名{{ macro.inputMust() }}</h2>
        <input type="text" name="person_p_name" class="m-inputText inputBlock__inputHalf js-valueEmptyCheck-target" placeholder="氏名を入力してください" value="" maxlength="250">
        <p class="inputBlock__confirmSetValue"></p>
        <p class="m-inputErrorText">個人氏名を入力してください。</p>
      </div>
      <div class="inputBlock">
        <h2 class="inputBlock__heading">フリガナ{{ macro.inputMust() }}</h2>
        <input type="text" name="person_p_reading" class="m-inputText inputBlock__inputHalf js-valueEmptyCheck-target" placeholder="フリガナを入力してください" value="" maxlength="250">
        <p class="inputBlock__confirmSetValue"></p>
        <p class="m-inputErrorText">フリガナを入力してください。</p>
      </div>
      <div class="inputBlock">
        <h2 class="inputBlock__heading">生年月日{{ macro.inputMust() }}</h2>
        <div class="inputBlockFlex inputBlockFlex--always">
          <select name="person_u_nenrei_year" class="m-inputSelect inputBlock__inputSmall">
            {{ macro.optionYear() }}
          </select>
          <p class="inputBlock__confirmSetValue inputBlock__confirmSetValue--birthday"></p>
          <select name="person_u_nenrei_month" class="m-inputSelect inputBlock__inputSmall">
            {{ macro.optionMonth() }}
          </select>
          <p class="inputBlock__confirmSetValue inputBlock__confirmSetValue--birthday"></p>
          <select name="person_u_nenrei_day" class="m-inputSelect inputBlock__inputSmall">
            {{ macro.optionDay() }}
          </select>
          <p class="inputBlock__confirmSetValue inputBlock__confirmSetValue--birthday"></p>
        </div>
      </div>
      <div class="inputBlock">
        <h2 class="inputBlock__heading">性別{{ macro.inputMust() }}</h2>
        <div class="inputBlockFlex">
          <div class="inputBlockFlex__item js-confirmHide-target">
            <input type="radio" id="man" name="person_u_seibetsu" class="m-inputRadio" value="option_p_male">
            <label for="man" class="m-inputRadioLabel">男性</label>
          </div>
          <p class="inputBlock__confirmSetValue"></p>
          <div class="inputBlockFlex__item js-confirmHide-target">
            <input type="radio" id="woman" name="person_u_seibetsu" class="m-inputRadio" value="option_p_female">
            <label for="woman" class="m-inputRadioLabel">女性</label>
          </div>
          <p class="inputBlock__confirmSetValue"></p>
        </div>
      </div>
      <div class="inputBlock">
        <h2 class="inputBlock__heading">住所(都道府県){{ macro.inputMust() }}</h2>
        <select name="person_u_zyusyotodoufuken" class="m-inputSelect inputBlock__inputHalf">
          {{ macro.optionPlace() }}
        </select>
        <p class="inputBlock__confirmSetValue"></p>
      </div>
      <div class="inputBlock">
        <h2 class="inputBlock__heading">郵便番号{{ macro.inputWant() }}</h2>
        <input type="hidden" class="p-country-name" value="Japan">
        <input type="tel" name="person_u_yubinbangou" class="m-inputText inputBlock__inputHalf p-postal-code" placeholder="1416005" oninput="if(value.length>7)value=value.replace(/[^0-9]/g, '').slice(0,7)" onblur="value=value.replace(/[^0-9]/g, '')" value="">
        <p class="inputBlock__confirmSetValue"></p>
        <p class="inputBlock__note js-confirmHide-target">※半角数字で入力してください</p>
      </div>
      <div class="inputBlock">
        <h2 class="inputBlock__heading">住所詳細{{ macro.inputWant() }}</h2>
        <input type="text" name="person_u_zyusyosyousai" class="m-inputText p-locality p-street-address" placeholder="品川区大崎2-1-1" value="" maxlength="250">
        <p class="inputBlock__confirmSetValue"></p>
      </div>
      <div class="inputBlock">
        <h2 class="inputBlock__heading">電話番号{{ macro.inputMust() }}</h2>
        <input type="number" name="person_p_telephone" class="m-inputText inputBlock__inputHalf js-valueEmptyCheck-target" placeholder="0354372950" oninput="if(value.length>11)value=value.slice(0,11)" value="">
        <p class="inputBlock__confirmSetValue"></p>
        <p class="m-inputErrorText">電話番号を入力してください</p>
        <p class="inputBlock__note js-confirmHide-target">※半角数字で入力してください</p>
      </div>
      <div class="inputBlock">
        <h2 class="inputBlock__heading">メールアドレス{{ macro.inputMust() }}</h2>
        <input type="text" name="person_p_mail" class="m-inputText js-mailValidation-target js-async-mailUpdate-target" placeholder="example@example.co.jp" value="" maxlength="250">
        <p class="inputBlock__confirmSetValue"></p>
        <p class="m-inputErrorText">メールアドレスを正しく入力してください。</p>
        <p class="inputBlock__note js-confirmHide-target">※半角英数字</p>
      </div>

      <div class="inputBlock js-confirmHide-target">
        <p class="inputBlock__guideText editProfile__attentionText">※メールアドレス変更の場合のみ確認メールが送信されます。</p>
      </div>

      <div class="inputBlock js-confirmHide-target">
        <div class="inputBlockNotice">
          <p class="inputBlockNotice__heading">確認メールが届かない場合</p>
          <p class="inputBlockNotice__text">メール到着までに時間がかかる場合があります。数分後に再度受信してみてください。<br>メーラーによっては迷惑メールとして処理されている可能性もありますので、ご注意ください。</p>
        </div>
      </div>

      <button type="button" class="inputBlock__confirm js-activate-target js-confirm-trigger" disabled>確認する</button>
      <button type="button" class="inputBlock__submit js-async-editProfileSubmit-target js-submit-target is-hidden">更新する</button>
      <button type="button" class="inputBlock__confirmBack js-confirmBack-trigger">修正する</button>
    </form>
  </section>

</div>

{% endblock %}
