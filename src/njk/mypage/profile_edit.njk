{% extends '_modules/_base.njk' %}
{%- set fileName = 'profile_edit' -%}
{%- set pageName = 'profile_edit' -%}
{%- set pageLevel = '2' -%}
{%- set pageTitle = 'プロフィール編集' -%}
{%- set en_pageTitle = 'EDIT PROFILE' -%}
{%- set pageDescription = 'プロフィール編集ディスクリプション' -%}
{%- set breadcrumbs = [{item: 'プロフィール編集'}]-%}

{% block content %}

<div class="container">

  <section class="editProfile">
    <div class="inputBlock">
      <h3 class="inputBlock__heading">個人氏名{{ macro.inputMust() }}</h3>
      <div class="inputBlockFlex">
        <div class="inputBlockFlex__item">
          <input type="text" name="registProfile_lastName" class="m-inputText" placeholder="性" value="">
          <p class="m-inputErrorText"></p>
        </div>
        <div class="inputBlockFlex__item">
          <input type="text" name="registProfile_firstName" class="m-inputText" placeholder="名" value="">
          <p class="m-inputErrorText"></p>
        </div>
      </div>
    </div>
    <div class="inputBlock">
      <h3 class="inputBlock__heading">フリガナ{{ macro.inputMust() }}</h3>
      <div class="inputBlockFlex">
        <div class="inputBlockFlex__item">
          <input type="text" name="registProfile_lastName_kana" class="m-inputText" placeholder="セイ" value="">
          <p class="m-inputErrorText"></p>
        </div>
        <div class="inputBlockFlex__item">
          <input type="text" name="registProfile_firstName_kana" class="m-inputText" placeholder="メイ" value="">
          <p class="m-inputErrorText"></p>
        </div>
      </div>
    </div>
    <div class="inputBlock">
      <h3 class="inputBlock__heading">生年月日{{ macro.inputWant() }}</h3>
      <div class="inputBlockFlex inputBlockFlex--always">
        <select name="registProfile_birthYear" class="m-inputSelect inputBlock__inputSmall">
          <option value="">年</option>
            {%- set selectYear = [
              {year: '1999'},
              {year: '1998'},
              {year: '1997'}
            ] -%}
            {%- for item in selectYear %}
            <option value="{{ loop.index }}">{{ item.year }}</option>
            {%- endfor %}
        </select>
        <select name="registProfile_birthMonth" class="m-inputSelect inputBlock__inputSmall">
          <option value="">月</option>
            {%- set selectMonth = [
              {month: '1'},
              {month: '2'},
              {month: '3'}
            ] -%}
            {%- for item in selectMonth %}
            <option value="{{ loop.index }}">{{ item.month }}</option>
            {%- endfor %}
        </select>
        <select name="registProfile_birthDay" class="m-inputSelect inputBlock__inputSmall">
          <option value="">日</option>
            {%- set selectDay = [
              {day: '1'},
              {day: '2'},
              {day: '3'}
            ] -%}
            {%- for item in selectDay %}
            <option value="{{ loop.index }}">{{ item.day }}</option>
            {%- endfor %}
        </select>
      </div>
      <p class="m-inputErrorText"></p>
    </div>
    <div class="inputBlock">
      <h3 class="inputBlock__heading">性別{{ macro.inputWant() }}</h3>
      <div class="inputBlockFlex">
        <div class="inputBlockFlex__item">
          <input type="radio" id="registProfile_sex_man" name="registProfile_sex" class="m-inputRadio" value="man">
          <label for="registProfile_sex_man" class="m-inputRadioLabel">男性</label>
        </div>
        <div class="inputBlockFlex__item">
          <input type="radio" id="registProfile_sex_woman" name="registProfile_sex" class="m-inputRadio" value="woman">
          <label for="registProfile_sex_woman" class="m-inputRadioLabel">女性</label>
        </div>
      </div>
      <p class="m-inputErrorText"></p>
    </div>
    <div class="inputBlock">
      <h3 class="inputBlock__heading">住所(都道府県){{ macro.inputMust() }}</h3>
      <select name="registProfile_place" class="m-inputSelect inputBlock__inputHalf">
        <option value="">都道府県を選択してください</option>
          {%- set selectPlace = [
            {place: '茨城'},
            {place: '栃木'},
            {place: '群馬'},
            {place: '埼玉'},
            {place: '千葉'},
            {place: '東京'},
            {place: '神奈川'},
            {place: '三重'},
            {place: '滋賀'},
            {place: '京都'},
            {place: '大阪'},
            {place: '兵庫'},
            {place: '奈良'},
            {place: '和歌山'}
          ] -%}
          {%- for item in selectPlace %}
          <option value="{{ loop.index }}">{{ item.place }}</option>
          {%- endfor %}
      </select>
      <p class="m-inputErrorText"></p>
    </div>
    <div class="inputBlock">
      <h3 class="inputBlock__heading">電話番号{{ macro.inputMust() }}</h3>
      <input type="text" name="registProfile_tel" class="m-inputText inputBlock__inputHalf" placeholder="03-5437-2950" value="">
      <p class="m-inputErrorText"></p>
    </div>
    <div class="inputBlock">
      <h3 class="inputBlock__heading">メールアドレス{{ macro.inputMust() }}</h3>
      <input type="text" name="registProfile_mail" class="m-inputText" placeholder="example@example.co.jp" value="">
      <p class="m-inputErrorText"></p>
      <p class="inputBlock__note">※半角英数字</p>
      <p class="inputBlock__confirmText">確認のためもう一度メールアドレスを入力してください</p>
      <input type="text" name="registProfile_mail_confirm" class="m-inputText" placeholder="example@example.co.jp" value="">
      <p class="m-inputErrorText"></p>
      <p class="inputBlock__note">※半角英数字</p>
    </div>
    <div class="inputBlock">
      <h3 class="inputBlock__heading">パスワード{{ macro.inputMust() }}</h3>
      <input type="password" name="registProfile_mobileMail" class="m-inputText" value="">
      <p class="m-inputErrorText"></p>
      <p class="inputBlock__note">※半角英数●文字以上を使用してください</p>
      <p class="inputBlock__confirmText">確認のためもう一度パスワードを入力してください</p>
      <input type="password" name="registProfile_mobileMail_confirm" class="m-inputText" value="">
      <p class="m-inputErrorText"></p>
      <p class="inputBlock__note">※半角英数●文字以上を使用してください</p>
    </div>

    <div class="inputBlock">
      <p class="inputBlock__guideText">※確認メールに記載されたURLをクリックするまで、メールアドレスは変更されていません。</p>
    </div>

    <div class="inputBlock">
      <div class="inputBlockNotice">
        <p class="inputBlockNotice__heading">確認メールが届かない場合</p>
        <p class="inputBlockNotice__text">メール到着までに時間がかかる場合があります。数分後に再度受信してみてください。<br>メーラーによっては迷惑メールとして処理されている可能性もありますので、ご注意ください。</p>
      </div>
    </div>

    <button type="submit" name="registProfile_submit" class="inputBlock__submit" disabled>確認画面へ</button>
  </section>
</div>

{% endblock %}
