{% extends '_modules/_base.njk' %}
{%- set fileName = 'index' -%}
{%- set pageName = 'regist_mail' -%}
{%- set pageLevel = '2' -%}
{%- set pageTitle = 'メールアドレス登録' -%}
{%- set en_pageTitle = 'SIGN UP' -%}
{%- set pageDescription = 'メールアドレス登録ディスクリプション' -%}
{%- set breadcrumbs = [{item: 'メールアドレス登録'}]-%}

{% block content %}

<div class="container">

  {%- set registSteps = [
    {number: '1', text: 'メールアドレス登録', class: ' is-active'},
    {number: '2', text: 'メール認証', class: ''},
    {number: '3', text: 'プロフィール登録', class: ''},
    {number: '4', text: 'レジュメ登録', class: ''},
    {number: '5', text: '完了', class: ''}
  ] -%}
  {% include '_modules/_registStep.njk' %}

  <section class="registMail">
    <div class="registMailRow">
      <p class="registMail__guideText">メールアドレスを登録してください。</p>
      <input type="text" name="registMail_mobileMail" class="m-inputText registMail__input" placeholder="example@example.co.jp" value="">
      <p class="m-inputErrorText"></p>
      <p class="m-note registMail__note">※半角英数字</p>
      <p class="registMail__confirmText">確認のためもう一度メールアドレスを入力してください</p>
      <input type="text" name="registMail_mobileMail_confirm" class="m-inputText registMail__input" placeholder="example@example.co.jp" value="">
      <p class="m-inputErrorText"></p>
      <p class="m-note registMail__note">※半角英数字</p>

      <ul class="registMailCaution">
        <li class="registMailCaution__item">※ご登録前には、<a href="#">利用規約</a>をご確認ください。</li>
        <li class="registMailCaution__item">※ご登録いただいた個人情報については、エムステージの個人情報保護方針に則り、厳重に管理させていただきます。</li>
        <li class="registMailCaution__item">※会員登録済みの方は、ログインを行ってください。</li>
      </ul>
    </div>

    <div class="registMailRow registMailRow--center">
      <input type="checkbox" name="registMail_termAgree" id="registMail_termAgree" class="m-inputCheck">
      <label for="registMail_termAgree" class="m-inputCheckLabel"><a href="#">個人情報保護方針</a>に同意する</label>
      <p class="m-inputErrorText"></p>
    </div>

    <button type="submit" name="registMail_submit" class="m-button m-button--blue registMail__submit" disabled>登録する</button>
  </section>
</div>

{% endblock %}
