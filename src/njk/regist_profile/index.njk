{% extends '_modules/_base.njk' %}
{%- set fileName = 'index' -%}
{%- set pageName = 'regist_profile' -%}
{%- set pageLevel = '2' -%}
{%- set pageTitle = '会員登録' -%}
{%- set en_pageTitle = 'SIGN UP' -%}
{%- set pageDescription = '会員登録ディスクリプション' -%}
{%- set breadcrumbs = [{item: '会員登録'}]-%}

{% block content %}

<div class="container">

  {% include '_modules/_registStep.njk' %}

  <section class="registProfile">
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">個人氏名<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <div class="registProfileInputFlex">
        <div class="registProfileInputFlex__item">
          <input type="text" name="registProfile_lastName" class="m-inputText registProfile__input" placeholder="性" value="">
          <p class="m-inputErrorText"></p>
        </div>
        <div class="registProfileInputFlex__item">
          <input type="text" name="registProfile_firstName" class="m-inputText registProfile__input" placeholder="名" value="">
          <p class="m-inputErrorText"></p>
        </div>
      </div>
    </div>
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">フリガナ<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <div class="registProfileInputFlex">
        <div class="registProfileInputFlex__item">
          <input type="text" name="registProfile_lastName_kana" class="m-inputText registProfile__input is-error" placeholder="セイ" value="鈴木">
          <p class="m-inputErrorText">エラーテキストエラーテキストエラーテキストエラーテキストエラーテキストエラーテキスト</p>
        </div>
        <div class="registProfileInputFlex__item">
          <input type="text" name="registProfile_firstName_kana" class="m-inputText registProfile__input is-error" placeholder="メイ" value="一郎">
          <p class="m-inputErrorText">エラーテキストエラーテキストエラーテキストエラーテキストエラーテキストエラーテキスト</p>
        </div>
      </div>
    </div>
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">都道府県<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <select name="registProfile_place" class="m-inputSelect registProfile__input registProfile__input--half">
        <option value="">都道府県を選択してください</option>
          {%- set selectPlace = [
            {place: '茨城'},
            {place: '栃木'},
            {place: '群馬'},
            {place: '埼玉'},
            {place: '千葉'},
            {place: '東京'},
            {place: '神奈川'},
            {place: '三重'},
            {place: '滋賀'},
            {place: '京都'},
            {place: '大阪'},
            {place: '兵庫'},
            {place: '奈良'},
            {place: '和歌山'}
          ] -%}
          {%- for item in selectPlace %}
          <option value="{{ loop.index }}">{{ item.place }}</option>
          {%- endfor %}
      </select>
      <p class="m-inputErrorText"></p>
    </div>
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">郵便番号<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <input type="text" name="registProfile_postal" class="m-inputText registProfile__input registProfile__input--half is-error" placeholder="141-6005" value="1411-6005">
      <p class="m-inputErrorText">エラーテキストエラーテキストエラーテキストエラーテキストエラーテキストエラーテキスト</p>
    </div>
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">市区群<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <input type="text" name="registProfile_city" class="m-inputText registProfile__input is-error" placeholder="品川区" value="03-5437-2950">
      <p class="m-inputErrorText">エラーテキストエラーテキストエラーテキストエラーテキストエラーテキストエラーテキスト</p>
    </div>
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">住所詳細<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <input type="text" name="registProfile_address" class="m-inputText registProfile__input" placeholder="大崎2-1-1 ThinkPark Tower 5F" value="">
      <p class="m-inputErrorText"></p>
    </div>
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">電話番号<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <input type="text" name="registProfile_tel" class="m-inputText registProfile__input registProfile__input--half" placeholder="03-5437-2950" value="">
      <p class="m-inputErrorText"></p>
    </div>
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">FAX<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <input type="text" name="registProfile_fax" class="m-inputText registProfile__input registProfile__input--half" placeholder="03-5437-2951" value="">
      <p class="m-inputErrorText"></p>
    </div>
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">メールアドレス<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <input type="text" name="registProfile_mail" class="m-inputText registProfile__input" placeholder="example@example.co.jp" value="">
      <p class="m-inputErrorText"></p>
      <p class="m-note registProfile__note">※半角英数字</p>
      <p class="registProfile__confirmText">確認のためもう一度メールアドレスを入力してください</p>
      <input type="text" name="registProfile_mail_confirm" class="m-inputText registProfile__input" placeholder="example@example.co.jp" value="">
      <p class="m-inputErrorText"></p>
      <p class="m-note registProfile__note">※半角英数字</p>
    </div>
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">携帯電話<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <input type="text" name="registProfile_mobile" class="m-inputText registProfile__input registProfile__input--half" placeholder="03-5437-2950" value="">
      <p class="m-inputErrorText"></p>
    </div>
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">携帯メールアドレス<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <input type="text" name="registProfile_mobileMail" class="m-inputText registProfile__input" placeholder="example@example.co.jp" value="">
      <p class="m-inputErrorText"></p>
      <p class="m-note registProfile__note">※半角英数字</p>
      <p class="registProfile__confirmText">確認のためもう一度メールアドレスを入力してください</p>
      <input type="text" name="registProfile_mobileMail_confirm" class="m-inputText registProfile__input" placeholder="example@example.co.jp" value="">
      <p class="m-inputErrorText"></p>
      <p class="m-note registProfile__note">※半角英数字</p>
    </div>
    <div class="registProfileRow">
      <h3 class="m-heading m-heading--lv4 registProfile__heading">パスワード<span class="m-inputIcon m-inputIcon--must">必須</span></h3>
      <input type="password" name="registProfile_mobileMail" class="m-inputText registProfile__input" value="">
      <p class="m-inputErrorText"></p>
      <p class="m-note registProfile__note">※半角英数●文字以上を使用してください</p>
      <p class="registProfile__confirmText">確認のためもう一度パスワードを入力してください</p>
      <input type="password" name="registProfile_mobileMail_confirm" class="m-inputText registProfile__input" value="">
      <p class="m-inputErrorText"></p>
      <p class="m-note registProfile__note">※半角英数●文字以上を使用してください</p>
    </div>

    <div class="registProfileRow registProfileRow--center">
      <input type="checkbox" name="registProfile_termAgree" id="registProfile_termAgree" class="m-inputCheck">
      <label for="registProfile_termAgree" class="m-inputCheckLabel"><a href="#">利用規約</a>に同意する</label>
      <p class="m-inputErrorText"></p>
    </div>

    <button type="submit" name="registProfile_submit" class="m-button m-button--blue registProfile__submit" disabled>確認画面へ</button>
  </section>
</div>

{% endblock %}
