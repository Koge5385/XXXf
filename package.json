{
  "name": "tmp",
  "version": "0.0.1",
  "scripts": {
    "build": "run-s build:prod",
    "build:common:css": "node-sass ./src/css --output ./dist/css --importer node_modules/node-sass-import && yarn fix:autoprefix",
    "build:common:html": "nunjucks '**/[^_]*.njk' --path ./src/njk --out ./dist && prettier --write './dist/**/*.html'",
    "build:common:ico": "cpx \"./src/img/common/favicon.ico\" dist/img/common",
    "build:common:img": "node imagemin.config.js",
    "build:dev": "npm-run-all clean -p build:{common,dev}:* copy:*:*",
    "build:dev:js": "simplifyify './src/js/**/*.js' -u './src/js/lib/**/*.js' --outfile ./dist/js --minify --debug",
    "build:prod": "npm-run-all clean -p build:{common,prod}:* copy:*:*",
    "build:prod:js": "simplifyify './src/js/**/*.js' -u './src/js/lib/**/*.js' --outfile ./dist/js --minify",
    "clean": "shx rm -rf ./dist",
    "copy:lib:js": "cpx \"./src/js/lib/vendor/**/*.js\" dist/js/lib/vendor",
    "fix": "run-s fix:*",
    "fix:css": "prettier './src/css/**/*.scss' --write && stylelint './src/css/**/*.scss' --fix",
    "fix:autoprefix": "postcss --use autoprefixer --no-map './dist/css/**/*.css' --dir './dist/css/pages'",
    "fix:js": "eslint './src/js/**/*.js' --fix",
    "fix:pack": "fixpack",
    "lint": "run-s lint:*",
    "lint:css": "stylelint './dist/css/**/*.css'",
    "lint:html": "yarn build:common:html && htmllint './dist/**/*.html'",
    "lint:js": "eslint './src/js/**/*.js'",
    "serve": "browser-sync start --server ./dist --open external --no-ghost-mode --startPath pagelist.html",
    "start": "npm-run-all build:dev -p watch serve",
    "update": "npx npm-safety-updater all --config safety-update.config.json --manager yarn",
    "update:patch": "npx npm-safety-updater patch --config safety-update.config.json --manager yarn",
    "update:minor": "npx npm-safety-updater minor --config safety-update.config.json --manager yarn",
    "update:major": "npx npm-safety-updater major --config safety-update.config.json --manager yarn",
    "reload": "browser-sync reload",
    "watch": "run-p watch:*",
    "watch:css": "chokidar './src/css/**/*.scss' --command 'yarn build:common:css && yarn reload'",
    "watch:html": "chokidar './src/**/*.njk' --command 'yarn build:common:html && yarn reload'",
    "watch:img": "chokidar './src/img/**/*' --command 'yarn build:common:img && yarn reload'",
    "watch:js": "chokidar './src/js/**/*.js' --command 'yarn copy:lib:js & yarn build:dev:js && yarn reload'"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "core-js": "^3.1.4",
    "node-sass": "^4.12.0",
    "node-sass-import": "^2.0.1",
    "regenerator-runtime": "^0.13.2",
    "remeda": "^0.0.11"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babelify": "^8.0.0",
    "browser-sync": "^2.18.13",
    "chokidar-cli": "^1.2.0",
    "cpx": "^1.5.0",
    "css-mqpacker": "^6.0.1",
    "eslint": "^4.7.2",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.6.0",
    "fixpack": "^2.3.1",
    "htmllint-cli": "^0.0.7",
    "imagemin-cli": "^3.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "npm-run-all": "^4.1.1",
    "nunjucks-cli": "^0.5.1",
    "postcss-cli": "^4.1.1",
    "postcss-import": "^11.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.10.2",
    "prettier-eslint": "^8.8.1",
    "shx": "^0.2.2",
    "simplifyify": "^3.2.4",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-order": "^0.7.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "browserslist": [
    "Explorer 11",
    "Edge >= 15",
    "Safari >= 10",
    "Chrome >= 41",
    "Firefox >= 54"
  ],
  "engines": {
    "node": ">= 10.16"
  },
  "license": "MIT"
}
